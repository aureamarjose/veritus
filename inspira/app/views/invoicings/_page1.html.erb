<h1 class="text-center pb-3 border-b-4 text-4xl font-extrabold dark:text-white">
  <%=t('activerecord.attributes.invoicing.revenue_for', year: @year)%>
</h1>

<%= render "invoicings/table_invoicings"%>

<hr class="mt-8 border-b-4">

<div class="mt-8 border relative overflow-x-auto shadow-md sm:rounded-lg">
  <%= column_chart [
    { name: t('activerecord.attributes.invoicing.revenue'), data: @received },
    { name: t('activerecord.attributes.invoicing.net_profit'), data: @profit }
    ],
    thousands: ".",
    decimal: ",",
    round: 2,
    zeros: true,
    prefix: "R$ ",
    title: t('activerecord.attributes.invoicing.revenue_profit'),
    height: "300px",
    xtitle: t('activerecord.attributes.invoicing.months'),
    ytitle: "Total (R$)",
    height: "500px",
    empty: t('activerecord.attributes.invoicing.no_data_available'),
    stacked: true
  %>
</div>

<hr class="mt-8 border-b-4">
<div class="xl:flex gap-4">

  <div class=" mt-8 sm:w-full xl:w-3/6  border relative overflow-x-auto shadow-md sm:rounded-lg ">
    <%= pie_chart @annual_revenue,
      thousands: ".",
      decimal: ",",
      round: 2,
      zeros: true,
      suffix: " %",
      title: t('activerecord.attributes.invoicing.profit_costs'),
      height: "500px",
      empty: t('activerecord.attributes.invoicing.no_data_available')
    %>
  </div>
  <div class="mt-8 sm:w-full xl:w-3/6 border relative overflow-x-auto shadow-md sm:rounded-lg">
    <h1 class="text-center mt-2 text-xl font-semibold dark:text-white">
      <%=t('activerecord.attributes.invoicing.revenue')%>
    </h1>
    <%= render "invoicings/table_summary"%>
  </div>
</div>