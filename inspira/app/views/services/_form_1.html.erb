<div data-controller="services--generalData" id="financialSituation">
  <div class="grid gap-6 mb-6 lg:grid-cols-3">

    <div >
      <%= form.label :folder,  class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :folder, value: form.object.new_record? ? number_with_delimiter(@next_number_folder, delimiter: '.') : number_with_delimiter(form.object.folder, delimiter: '.'), maxlength: 8, data: { action: "input->services--generalData#format", "services--generalData-target":"inputFolder" }, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: form.object.new_record? ? "Número da próxima pasta: #{number_with_delimiter(@next_number_folder, delimiter: '.')}" : "Número da pasta atual: #{number_with_delimiter(form.object.folder, delimiter: '.')}", required: false %>
    </div>

    <div>
      <%= form.label :sector, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.select :sector, ['Projeto', 'Execução', 'Rural', 'Particular'], {include_blank: true}, { class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"}%>
    </div>

    <div>
      <%= form.label :progress, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.select :progress, ['Em andamento', 'Finalizado'], {include_blank: true}, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder:"100.100.100-11", required: false %>
    </div>
  </div>

  <div class="grid gap-6 mb-6 lg:grid-cols-3">
    <div data-controller="flatpickr">
      <%= form.label :start_date, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :start_date, data:{"flatpickr-target":"inputDate"}, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autocomplete: "off" %>
    </div>

    <div data-controller="flatpickr">
      <%= form.label :end_date,  class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :end_date, data:{"flatpickr-target":"inputDate"}, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autocomplete: "off" %>
    </div>

    <div>
      <%= form.label :financial_situation, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :financial_situation, data: { "services--generalData-target":"inputFinancialSituation" }, class:"bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", readonly: true, required: false %>
    </div>
  </div>
</div>

<div class="my-5">
  <%= form.label :description, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
  <%= form.text_area :description, rows:"4", class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
</div>

<h1 class="pb-3 border-b-2 text-2xl font-extrabold dark:text-white">
  <%=t('activerecord.attributes.service.client')%>
</h1>

<div data-controller="services--searchClients">

  <div class="mt-8 max-w-sm ">
    <div class="relative w-full">
      <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
        <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="m21 21-3.5-3.5M17 10a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"/>
        </svg>
      </div>
      <%= text_field_tag :search, params[:search], data: { action: "input->services--searchClients#searchClients", "services--searchClients-target":"search" }, class: "bg-gray-50 border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: t('activerecord.attributes.service.search.placeholder')%>
    </div>

    <div data-services--searchClients-target="results" class="mt-8 w-48 text-sm font-medium text-gray-900 bg-white  border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
    </div>

  </div>

  <div data-services--searchClients-target="message" class="mt-8 font-medium text-gray-900 whitespace-nowrap dark:text-white" >
    <%=t('activerecord.attributes.service.add_service_contractor')%>
  </div>

  <div  class="mt-8 relative overflow-x-auto shadow-md sm:rounded-lg">
    <table data-services--searchClients-target="table" class="data-table w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400" >
      <thead class=" text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3">
            <%=t('activerecord.attributes.client.table.client')%>
          </th>
          <th scope="col" class="px-6 py-3">
            <%=t('activerecord.attributes.client.table.number_doc')%>
          </th>
          <th scope="col" class="px-6 py-3">
            <%=t('activerecord.attributes.client.table.phones')%>
          </th>
          <th scope="col" class="px-6 py-3">E-mails</th>
          <th scope="col" class="px-6 py-3 text-right">
            <%=t('activerecord.attributes.client.table.action')%>
          </th>
        </tr>
      </thead>

      <tbody>
        <tr  id="client_<%= @client&.id %>" class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
          <td class="px-6 py-4"><%= @client&.name_client %></td>
          <td class="px-6 py-4"><%= @client&.number_doc %></td>
          <td class="px-6 py-4">
            <% @client&.phones&.each do |phone| %>
              <%= phone.phone %><br>
            <% end %>
          </td>
          <td class="px-6 py-4">
            <% @client&.emails&.each do |email| %>
              <%= email.email %><br>
            <% end %>
          </td>
          <td class="px-6 py-4 text-right">
            <button data-action="services--searchClients#deleteClient2" data-client-id="<%= @client&.id %>" ><svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M8.586 2.586A2 2 0 0 1 10 2h4a2 2 0 0 1 2 2v2h3a1 1 0 1 1 0 2v12a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V8a1 1 0 0 1 0-2h3V4a2 2 0 0 1 .586-1.414ZM10 6h4V4h-4v2Zm1 4a1 1 0 1 0-2 0v8a1 1 0 1 0 2 0v-8Zm4 0a1 1 0 1 0-2 0v8a1 1 0 1 0 2 0v-8Z" clip-rule="evenodd"/></svg></button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="my-5">
    <%= form.hidden_field :client_id, data:{"services--searchClients-target":"clientId"}, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
</div>