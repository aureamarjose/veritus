<%=render "cash_flows/modal_filter"%>

<%= form_with url: admins_backoffice_cash_flows_path, data:{controller:"flatpickr", turbo_frame: "result_record", turbo_action:"advance"}, class:"mt-8", method: :get, local: true do |form| %>
  <div class="grid mb-6 sm-grid-cols-1 md:grid-cols-1 sm:w-72 md:w-96  ">
    <div class="flex sm:w-72 md:w-80"
      data-controller="cashFlow--clearInput">

      <%= form.date_field :date, data:{"flatpickr-target":"inputDateRange", "cashFlow--clearInput-target":"input"}, class: "text-center bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block sm:w-3/4 md:w-80 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder:"Pesquise pelo período" %>

      <%= button_tag type: 'submit', class: "p-2.5 ms-2 text-sm font-medium text-white bg-blue-700 rounded-lg border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
        </svg>
        <span class="sr-only">Filtrar</span>
      <%end%>

      <div class="w-6">
        <%=render "cash_flows/dropdown_index"%>
      </div>
    </div>
  </div>
<% end %>

<%=turbo_frame_tag "result_record" do %>
  <% if @cash_flows.empty? %>
    <p class="mt-8 font-medium text-gray-900 whitespace-nowrap dark:text-white" >Não há registros.</p>
  <% else %>
    <div id="list_services">
      <div  class="mt-8 relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400" >
          <thead class=" text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th scope="col" class="px-6 py-3">Data</th>
              <th scope="col" class="px-6 py-3 text-center">Lançamento</th>
              <th scope="col" class="px-6 py-3 text-center"> Descrição</th>
              <th scope="col" class="px-6 py-3 text-center">Tipo de lançamento</th>
              <th scope="col" class="px-6 py-3 text-center">Valor</th>
              <th scope="col" class="px-6 py-3 text-center">Saldo</th>
            </tr>
          </thead>

          <tbody>
            <% @cash_flows.each do |cash_flow| %>
              <tr id="remove_<%= dom_id(cash_flow)%>" class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <%= render partial: 'cash_flows/cash_flow', locals: { cash_flow: cash_flow } %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  <% end %>
  <% if @cash_flows.empty? %>
    <div class="mt-8">
      <% if @logger %>
        <%= link_to "Voltar", admins_backoffice_cash_flows_path, data: {turbo_stream: true, turbo_frame: "result_record", turbo_action:"advance"}, class: "w-full text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
      <% else %>
        <%= link_to "Voltar", admins_backoffice_cash_flow_index_path, data: {turbo_stream: true, turbo_frame: "result_record", turbo_action:"advance"}, class: "w-full text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
      <% end %>
    </div>
  <% elsif @cash_flows.total_pages > 1 %>
    <%=render "cash_flows/pagination"%>
  <%end%>
<%end%>
