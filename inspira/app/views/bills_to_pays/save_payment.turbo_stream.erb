  <%= button_to add_payment_admins_backoffice_cash_register_path(@bills_to_pay), data: { modal_target: dom_id(@bills_to_pay, :crud_modal), modal_toggle: dom_id(@bills_to_pay, :crud_modal), "cashRegister--payment-target":"buttonPayment"}, class: "inline-flex items-center justify-center opacity-30 cursor-not-allowed", id: "button_#{dom_id(@bills_to_pay)}", diabled: true do %>
    <svg class="w-6 h-6 text-gray-800 dark:text-white" inert="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
