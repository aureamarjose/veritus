<%= turbo_stream.update "status_#{dom_id(@bills_to_pay)}" do %>
  <%= @bills_to_pay.status == false ? "Aberto" : "Pago" %>
<% end %>

<%= turbo_stream.update "payday_#{dom_id(@bills_to_pay)}" do %>
  <%= @bills_to_pay.pay_day ? I18n.l(@bills_to_pay.pay_day, format: :default) : "-"%>
<% end %>

