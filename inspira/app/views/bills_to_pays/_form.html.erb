        <span class="ms-3 text-sm font-medium text-gray-900 dark:text-gray-300">Conta Recorrente</span>
      
    </label>
  <% end %>

  <h1 class="mt-8 pb-3 border-b-2 text-2xl font-extrabold dark:text-white">Dados da Conta</h1>

  <div class="mt-8" data-cashRegister--formControl-target="formAccountPayable">
    <%= render partial: "bills_to_pays/form_1", locals: { bills_to_pay: @bills_to_pay} %>
  </div>

  <div class="mt-8 hidden" data-cashRegister--formControl-target="formRecurringPayableAccount">
    <%=render partial: "bills_to_pays/form_2", locals: { bills_to_pay: @bills_to_pay} %>     
    
  </div>
</div>
  
  
